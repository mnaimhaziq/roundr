                     <AnchorPane prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: A8E5F9;"/>
                    </content>
                  </ScrollPane>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="messageField" promptText="Enter your message" style="-fx-background-color: D9D9D9; -fx-border-radius: 0; -fx-border-color: 000000;">
                           <font>
                              <Font name="Inter Regular" size="14.0" />
                           </font></TextField>
                        <Button fx:id="sendButton" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #61B3FF; -fx-border-radius: 0; -fx-border-color: 000000;" text="Send" textFill="WHITE">
                           <font>
                              <Font name="Inter Regular" size="14.0" />
                           </font></Button>
                     </children>
                  </HBox>
               </children>
               </VBox>
         </children>
         </VBox>
   </children>
</HBox>
