                     <children>
                        <Label text="Ranking" />
                        <ListView fx:id="playerNameList" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="155.0">
                     <children>
                        <Label text="Score" />
                        <ListView fx:id="scoreList" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
           <TextArea fx:id="textAreaChat" minHeight="0.0" minWidth="0.0" prefHeight="220.0" prefWidth="310.0" />
            <HBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <TextField fx:id="sendMessageInput" onAction="#onEnter" prefHeight="40.0" prefWidth="239.0" promptText="Enter your message">
                     <font>
                        <Font name="Inter Regular" size="18.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#HandleMessageInput" prefHeight="40.0" prefWidth="70.0" style="-fx-background-color: #61B3FF;" text="Submit" textFill="WHITE">
                     <font>
                        <Font name="Inter Regular" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children></VBox>
   </children>
